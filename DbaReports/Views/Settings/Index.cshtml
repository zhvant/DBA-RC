@model IEnumerable<DbaRC.Models.Setting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" media="all" href="css/mystyle.css">

<div class="container body-content">

<h4 align="center">Settings</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServerName)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.ConnectionString)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServerName)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.ConnectionString)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>

        <a asp-action="Create" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-plus-sign"></span> Add
        </a>

<br/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
